<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg50"
    tools:context="com.gec.biblio.tp3.activity.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="25dp"
        android:text="Bienvenue a la bibliotheque George-Etienne Cartier"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnClient"
        android:layout_width="186dp"
        android:layout_height="59dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:alpha="0.6"

        android:background="@android:color/background_dark"
        android:elevation="24dp"
        android:text="acceder a mes infos"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btList"
        android:layout_width="182dp"
        android:layout_height="53dp"
        android:layout_below="@+id/btnClient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:alpha="0.8"
        android:background="@color/colorPrimaryDark"
        android:elevation="22dp"
        android:text="Voir liste des livres"
        android:textColor="@android:color/background_light" />

    <ProgressBar
        android:id="@+id/login_progress2"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/btList"
        android:layout_marginTop="10dp" />


</RelativeLayout>
